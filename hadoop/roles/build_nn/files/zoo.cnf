# The number of milliseconds of each tick
tickTime=2000
# The number of ticks that the initial 
# synchronization phase can take
initLimit=10
# The number of ticks that can pass between 
# sending a request and getting an acknowledgement
syncLimit=5
# the directory where the snapshot is stored.
dataDir=/var/lib/zookeeper
# the directory where the zookeeper's log is stored.
dataLogDir=/var/log/zookeeper
# the port at which the clients will connect
clientPort=2181
# params by using cloudera manager
maxClientCnxns=50
minSessionTimeout=4000
maxSessionTimeout=40000
autopurge.purgeInterval=24
autopurge.snapRetainCount=5
server.1=nn01.3pas.admatrix.jp:3181:4181
server.2=nn02.3pas.admatrix.jp:3181:4181
server.3=nn03.3pas.admatrix.jp:3181:4181
leaderServes=yes
