#!/bin/sh
#
# This script will be executed *after* all the other init scripts.
# You can put your own initialization stuff in here if you don't
# want to do the full Sys V style init stuff.

touch /var/lock/subsys/local
echo "ffffffff" > /sys/class/net/{{ gb_interface }}/queues/tx-0/xps_cpus
echo "ffffffff" > /sys/class/net/{{ gb_interface }}/queues/rx-0/rps_cpus
echo "ffffffff" > /sys/class/net/{{ gb_interface }}/queues/rx-1/rps_cpus
echo "ffffffff" > /sys/class/net/{{ gb_interface }}/queues/rx-2/rps_cpus
echo "ffffffff" > /sys/class/net/{{ gb_interface }}/queues/rx-3/rps_cpus
echo 4096 > /sys/class/net/{{ gb_interface }}/queues/rx-0/rps_flow_cnt
echo 4096 > /sys/class/net/{{ gb_interface }}/queues/rx-1/rps_flow_cnt
echo 4096 > /sys/class/net/{{ gb_interface }}/queues/rx-2/rps_flow_cnt
echo 4096 > /sys/class/net/{{ gb_interface }}/queues/rx-3/rps_flow_cnt
echo 32768 > /proc/sys/net/core/rps_sock_flow_entries
